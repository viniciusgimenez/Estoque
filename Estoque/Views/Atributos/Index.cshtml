@model IEnumerable<Estoque.Models.Atributo>

@{
    ViewBag.Title = "Atributos";
}

<h2>Atributos</h2>

<p>
    <button class="btn default">
        @Html.ActionLink("Novo", "Create", new { @class = "default" })
    </button>
</p>

@using (Html.BeginForm())
{
<p>
    Filtro: @Html.TextBox("filtro")
    <button type="submit" value="filtro" class="btn info">Pesquisar</button>
</p>
}
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.DESCRICAO)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DESCRICAO)
            </td>
            <td>
                <button class="btn warning">
                    @Html.ActionLink("Editar", "Edit", new { id = item.IDATRIBUTO }, new { @class = "warning" })
                </button> |
                <button class="btn info">
                    @Html.ActionLink("Visuarlizar", "Details", new { id = item.IDATRIBUTO }, new { @class = "info" })
                </button> |
                <button class="btn danger">
                    @Html.ActionLink("Apagar", "Delete", new { id = item.IDATRIBUTO }, new { @class = "danger" })
                </button>
            </td>
        </tr>
    }

</table>
